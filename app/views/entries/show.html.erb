<div>
  <h2>Entry</h2>
  <h3><%= @entry.award_ceremony_name %></h3>
  <h3><%= @entry.email %></h3>

  <%= link_to "Edit Entry", edit_entry_path(@entry) %>
  <ul class="entry">
    <% @entry.award_ceremony.categories.each do |category| %>
      <li class="category">
        <div><%= category.name %></div>
        <% if pick = @entry.picks.detect{|p| p.category_id == category.id } %>
          <%= pick.nominee.name %>
        <% else %>
          -
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
